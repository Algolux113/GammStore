@model GammStore.ViewModels.LoginModel

@{
    ViewData["Title"] = "Вход на сайт";
}

<h1>@ViewData["Title"]</h1>

<p><a asp-action="Register" asp-controller="Account">Регистрация</a></p>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div>
        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-secondary" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}